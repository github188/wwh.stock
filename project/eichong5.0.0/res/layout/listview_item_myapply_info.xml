<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white"
    android:layout_marginTop="25dp"
    android:paddingBottom="10dp"
     >
    <TextView 
        android:id="@+id/listview_card_name_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="联系人："
		android:textColor="@color/common_black"
		android:textSize="16sp"    
        />
     <TextView 
        android:id="@+id/listview_card_name"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_name_temp"  
        />
     
      <TextView 
        android:id="@+id/listview_card_phone_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="联系电话："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_name"   
        />
     <TextView 
        android:id="@+id/listview_card_phone"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_phone_temp"  
		android:layout_below="@id/listview_card_name"  
        />
     
     <TextView 
        android:id="@+id/listview_card_addr_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="邮寄地址："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_phone"   
        />
     <TextView 
        android:id="@+id/listview_card_addr"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:ellipsize="marquee"
		android:layout_toRightOf="@id/listview_card_addr_temp"  
		android:layout_below="@id/listview_card_phone"  
        />
     
     <TextView 
        android:id="@+id/listview_card_time_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="申请时间："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_addr"   
        />
     <TextView 
        android:id="@+id/listview_card_time"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_time_temp"  
		android:layout_below="@id/listview_card_addr"  
        />

      <TextView 
        android:id="@+id/listview_card_status_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="状态："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_time"   
        />
     <TextView 
        android:id="@+id/listview_card_status"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_status_temp"  
		android:layout_below="@id/listview_card_time"  
        />
     
      <TextView 
        android:id="@+id/listview_card_ic_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="卡号："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_status"   
        />
     <TextView 
        android:id="@+id/listview_card_ic"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_ic_temp"  
		android:layout_below="@id/listview_card_status"  
        />
     
      <TextView 
        android:id="@+id/listview_card_guashi_temp"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
		android:text="挂失时间："
		android:textColor="@color/common_black"
		android:textSize="16sp" 
		android:layout_below="@id/listview_card_ic"   
        />
     <TextView 
        android:id="@+id/listview_card_guashi"  
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
		android:textColor="@color/common_black"
		android:textSize="16sp"  
		android:layout_toRightOf="@id/listview_card_guashi_temp"  
		android:layout_below="@id/listview_card_ic"  
        />
</RelativeLayout>
