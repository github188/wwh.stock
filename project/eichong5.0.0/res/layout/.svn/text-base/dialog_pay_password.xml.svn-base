<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:padding="30dp" >
    
    <TextView 
         android:id="@+id/dialog_pay_password_payment"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:textColor="@color/common_orange"
         android:textSize="18sp"
         android:textStyle="bold"
         android:gravity="center"
        />
    
     <TextView 
         android:id="@+id/dialog_pay_password_current"
         android:layout_below="@id/dialog_pay_password_payment"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:textColor="@color/common_black"
         android:textSize="18sp"
         android:gravity="center"
        />
    <View 
         android:id="@+id/dialog_pay_password_line"
         android:layout_below="@id/dialog_pay_password_current"
         android:layout_width="match_parent"
    	 android:layout_height="1dp"
    	  android:layout_marginTop="20dp"
         android:background="@color/common_gray"
        />
    <TextView 
         android:id="@+id/dialog_pay_password_tip"
          android:layout_marginTop="20dp"
         android:layout_below="@id/dialog_pay_password_line"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:text="请输入支付密码"
         android:textColor="@color/common_black"
         android:textSize="15sp"
         android:gravity="center"
        />
     <EditText
         android:id="@+id/dialog_pay_password_money_et"
         android:layout_below="@id/dialog_pay_password_tip"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textSize="14sp"
         android:maxLength="6"
         android:inputType="numberPassword"
         android:background="@drawable/common_edit_shape_selector"
         android:layout_marginTop="20dp"
         />
    <TextView 
         android:id="@+id/dialog_pay_password_confirm"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/dialog_pay_password_money_et"
         android:layout_marginTop="30dp"
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
         android:text="确定"
         android:textColor="@color/common_white"
         android:textSize="17sp"
         android:gravity="center"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
          android:layout_marginLeft="20dp"
         android:background="@drawable/bespoke_detail_led_light_gray"
        />
    <TextView 
         android:id="@+id/dialog_pay_password_cancle"
         android:layout_alignParentRight="true"
         android:layout_below="@id/dialog_pay_password_money_et"
         android:layout_marginTop="30dp"
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
         android:text="取消"
         android:textColor="@color/common_white"
         android:textSize="17sp"
         android:gravity="center"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:layout_marginRight="20dp"
         android:background="@drawable/bespoke_detail_led_gray"
        />
    
    
    
    
    

</RelativeLayout>
