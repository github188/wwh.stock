<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white" >
    
    <RelativeLayout
        android:id="@+id/scan_success_top_rl" 
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/scan_success_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="扫描详情"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
             android:visibility="gone"
            />
        </RelativeLayout>
        <!-- 电桩地址 -->
    <TextView 
        	android:id="@+id/scan_success_addr_tag"
        	android:layout_below="@id/scan_success_top_rl"
        	android:layout_marginTop="30dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="电桩地址:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_addr"
        	android:layout_below="@id/scan_success_top_rl"
        	android:layout_toRightOf="@id/scan_success_addr_tag"
        	android:layout_marginTop="30dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
         <!-- 充电方式 -->
    <TextView 
        	android:id="@+id/scan_success_mode_tag"
        	android:layout_below="@id/scan_success_addr"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="充电方式:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_mode"
        	android:layout_below="@id/scan_success_addr"
        	android:layout_toRightOf="@id/scan_success_mode_tag"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
         <!-- 充电接口-->
    <TextView 
        	android:id="@+id/scan_success_interface_tag"
        	android:layout_below="@id/scan_success_mode"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="充电接口:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_interface"
        	android:layout_below="@id/scan_success_mode"
        	android:layout_toRightOf="@id/scan_success_interface_tag"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
           <!-- 枪口编号-->
    <TextView 
        	android:id="@+id/scan_success_head_tag"
        	android:layout_below="@id/scan_success_interface"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="枪口编号:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_head"
        	android:layout_below="@id/scan_success_interface"
        	android:layout_toRightOf="@id/scan_success_head_tag"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
            <!-- 电桩额定功率-->
    <TextView 
        	android:id="@+id/scan_success_power_tag"
        	android:layout_below="@id/scan_success_head"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="电桩额定功率:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_power"
        	android:layout_below="@id/scan_success_head"
        	android:layout_toRightOf="@id/scan_success_power_tag"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
              <!-- 电桩额定电流-->
    <TextView 
        	android:id="@+id/scan_success_ocurrent_tag"
        	android:layout_below="@id/scan_success_power"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:text="电桩额定电流:"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
    <TextView 
        	android:id="@+id/scan_success_ocurrent"
        	android:layout_below="@id/scan_success_power"
        	android:layout_toRightOf="@id/scan_success_ocurrent_tag"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_light_black"
        	android:textSize="17sp"
        />
   <TextView 
        	android:id="@+id/scan_success_next"
        	android:layout_below="@id/scan_success_ocurrent"
        	android:layout_marginTop="30dp"
        	android:layout_marginLeft="20dp"
        	android:layout_marginRight="20dp"
        	android:gravity="center"
        	android:text="下一步"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        	android:textColor="@color/common_white"
        	android:textSize="18sp"
        	android:background="@drawable/recharge_commit_bg_light_white"
        />

</RelativeLayout>
