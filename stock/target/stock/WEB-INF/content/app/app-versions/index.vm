<!DOCTYPE html>
<html>
    <head>
        <title>APP版本管理管理</title>
        <meta charset="UTF-8">
        #parse("commons/commonJs.vm")
		#parse("commons/commonCss.vm")
		<script type="text/javascript">
			$(function() {
				jQuery('#dg').datagrid({
					url:'app-versions/queryPaged',
					columns:[[
                        {field:'id',checkbox:true}
						,{field:'iosversion',title:'ios版本号',width:100}
						,{field:'androidversion',title:'安卓版本号',width:100}
						,{field:'iosforceupdflg',title:'ios是否强制更新',width:100}
						,{field:'androidforceupdflg',title:'安卓是否强制更新',width:100}
						,{field:'iosdesc',title:'ios更新描述',width:100}
						,{field:'androiddesc',title:'安卓更新描述',width:100}
						,{field:'orderBy',title:'排序',width:100}
				    ]],
				    pagination:true,
				    singleSelect:false,
				    fitColumns:true,
				    fit: true,
				    toolbar:'#toolbar',
			    	onDblClickRow: function(rowid,rowdata){
						editForm();
			    	}
			    });
			});
			function optionFun(value,row,index) {
				return "";
			}
		  	function newForm(){
		  		Man.openWin('新增APP版本管理','app-versions/add',600,200);
			}
			function editForm(){
				var row = jQuery('#dg').datagrid('getSelected');
				if (row){
					Man.openWin('编辑APP版本管理','app-versions/edit/'+row.id,600,300);
				}
			}
			function destroyForm(){
                var rows = jQuery('#dg').datagrid('getSelections');
				if (rows.length>0){
					jQuery.messager.confirm('确认删除','确定删除该记录?',function(r){
						if (r){
                            var ids = [];
                            jQuery.each(rows,function(index,row) {
                                ids.push(row.id);
                            });
							jQuery.post('app-versions/delete',{'ids':ids},function(result){
								if(result.success) {
									jQuery('#dg').datagrid('reload');    // reload the user data
								} else {
									jQuery.messager.show({    // show error message
										title: '错误',
										msg: result.message
									});
								}
							});
						}
					});
				}
			}
			
			function contentSearch(){ 
				var iosversion=jQuery('#filter_iosversion').val();
		        jQuery('#dg').datagrid('load',{
				'iosversion':iosversion		    	})}
	    	
		</script>
</head>
<body class="easyui-layout" style="overflow-y: hidden" scroll="no">
   <table id="dg" data-options="toolbar:'#toolbar'"></table>
    <div id="toolbar">
    	<div class="search_box">
			ios版本号：<input id="filter_iosversion" class="easyui-validatebox" >
			<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="contentSearch()">搜索</a>
    	</div>
    	<div class="btn_box">
    		<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newForm()">新增</a>
        	<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editForm()">编辑</a>
        	<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyForm()">删除</a>
    	</div>
	</div>
</body>
</html>
