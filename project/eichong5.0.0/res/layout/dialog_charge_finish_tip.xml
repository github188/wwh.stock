<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/custom_content"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:text="充电已结束，请去订单列表查看详情"
        android:background="@drawable/custom_common_dialog_top"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        />
<TextView 
        android:id="@+id/custom_positiveButton"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/custom_common_dialog_bottom"
        android:textColor="@color/common_orange"
        android:textSize="15sp"
        android:text="我知道了"
        android:gravity="center"
        />
</LinearLayout>
