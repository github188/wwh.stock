<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预约费用计算说明"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
         <TextView 
             android:id="@+id/bespoke_price_cancle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="关闭"
             android:textColor="@color/common_white"
             android:textSize="15sp"
             android:padding="5dp"
             android:layout_marginRight="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <TextView 
             android:id="@+id/bespoke_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_orange"
             android:textSize="17sp"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="20dp"
            />
     <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:text="预约费用计算说明"
             android:textSize="17sp"
             android:textStyle="bold"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="20dp"
            />
     <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_gray"
             android:text="预约费用=预约单价*预约时长"
             android:textSize="15sp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="20dp"
            />
     <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:text="预约须知"
             android:textSize="17sp"
              android:textStyle="bold"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="20dp"
            />
      <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_gray"
             android:text="@string/bespoke_price_explain"
             android:textSize="15sp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
            />
     
    

</LinearLayout>
