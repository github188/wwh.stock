<?xml version="1.0" encoding="utf-8"?>
<!-- 地址设置界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_grey"
    android:orientation="vertical" >
     <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/malfunction_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
            android:id="@+id/malfunction_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="故障通告"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
        

        <TextView 
            android:id="@+id/malfunction_title_t"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="16sp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="10dp"
             android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/malfunction_content"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="16sp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="20dp"
             android:layout_centerVertical="true"

            />
     <ListView 
         android:id="@+id/mal_list"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         
         ></ListView>
     
     
     
		
	
</LinearLayout>
