<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white"
    android:orientation="vertical" >

		<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView 
            android:id="@+id/integral_detail_time_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_centerVertical="true"
             android:textColor="@color/common_light_light_black"
             android:textSize="14sp"
             android:text="2017-2-2 "
            />

        <TextView 
            android:id="@+id/integral_detail_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/integral_detail_time_title"
             android:layout_marginLeft="10dp"
             android:textColor="@color/common_light_black"
             android:textSize="14sp"
             android:text="充值赠送"
             android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/integral_detail_size"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_marginRight="20dp"
             android:textColor="@color/common_orange"
             android:textSize="16sp"
             android:layout_centerVertical="true"
            />
        </RelativeLayout>
        
	<View android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:background="@color/common_light_grey"/>
</LinearLayout>
