<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/common_orange"
         android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/activity_car_repair_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_btn_back"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"/>
        <EditText 
            android:id="@+id/activity_car_repair_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="输入关键词"
            android:textColorHint="@color/common_light_white"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/common_white"
            android:textSize="15sp"       
            android:background="@drawable/home_search_bg"   
            />
        <TextView 
             android:id="@+id/activity_car_repair_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:textColor="@color/common_white"
            android:textSize="17sp" 
            android:text="搜索"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            />
        
        
    </LinearLayout>
    <!-- android:scrollbars="none" -->
 <ScrollView 
    android:layout_width="match_parent"
    android:background="@color/common_white"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
     <com.bm.wanma.view.MyDetailListView
        android:id="@+id/activity_car_repair_listview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@null"
	    android:listSelector="@color/common_white"
	    ></com.bm.wanma.view.MyDetailListView>  

</ScrollView>
    
    
    
    

</LinearLayout>
