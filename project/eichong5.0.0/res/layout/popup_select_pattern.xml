<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<View 
	    android:id="@+id/semitransparent"
	    android:layout_weight="1"
	    android:layout_height="0dp"
	    android:background="#e0000000"
	    android:visibility="invisible"
	    android:layout_width="match_parent"
	    />
    <RelativeLayout
        android:id="@+id/pattern_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_white" >   
		<ImageButton
            android:id="@+id/pattern_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_close" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="选择付款方式"
            android:textColor="@color/common_black"
            android:textSize="18sp" />
    </RelativeLayout>
    <View 
        android:id="@+id/pattern_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_white" 
        />
    <RelativeLayout 
        android:id="@+id/recharge_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/common_white" 
        >
    <ImageView
        android:id="@+id/alipay_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/alipay" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝支付"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/common_light_black"
        android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/alipay_icon"
        />
     <ImageView
        android:id="@+id/select_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/btn_tick" />
    </RelativeLayout>
    <View 
        android:id="@+id/pattern_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_white" 
        />
    <RelativeLayout 
        android:id="@+id/recharge_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/common_white" 
        >
    <ImageView
        android:id="@+id/wechat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/appwx_logo" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:textColor="@color/common_light_black"
        android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/wechat_icon"
        />
     <ImageView
        android:id="@+id/select_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/btn_tick" />
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/common_white" 
        />

</LinearLayout>