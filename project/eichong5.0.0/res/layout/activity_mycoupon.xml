<?xml version="1.0" encoding="utf-8"?>
<!-- 优惠券 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_white"
    android:orientation="vertical" >
     <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/coupon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="优惠券"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        <TextView 
            android:id="@+id/coupon_entrance"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="优惠码"
             android:textColor="@color/common_white"
             android:textSize="15sp"
             android:padding="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
            />
        </RelativeLayout>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:background="@drawable/coupon_status_background"
           android:orientation="horizontal"
           android:baselineAligned="false"
           >
        <RelativeLayout 
            android:id="@+id/coupon_usable_rl"
            android:layout_weight="1"
           	 android:layout_height="match_parent"
           	 android:layout_width="0dp"
            >
            <LinearLayout 
            android:layout_width="wrap_content"
           	 android:layout_height="match_parent"
           	 android:layout_centerInParent="true"
           	 android:gravity="center"
            >
             <TextView 
             android:id="@+id/coupon_usable_tv"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:gravity="center"
             android:text="可用"
             android:textSize="16sp"
             android:textColor="@color/common_black"
             />
           <TextView 
             android:id="@+id/coupon_usable_tv_size"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:layout_toRightOf="@id/coupon_usable_tv"
             android:visibility="gone"
             android:layout_marginLeft="2dp"
             android:gravity="center_vertical"
             android:textSize="14sp"
             android:textColor="@color/common_black"
             />  
                
            </LinearLayout>
            
           
            <View 
             android:id="@+id/coupon_usable_v"
             android:layout_height="2dp"
           	 android:layout_width="60dp"
             android:background="@color/common_orange"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true" />
        </RelativeLayout>
         <RelativeLayout 
            android:id="@+id/coupon_used_rl"
            android:layout_weight="1"
           	 android:layout_height="match_parent"
           	 android:layout_width="0dp"
            >
           
           <LinearLayout 
            android:layout_width="wrap_content"
           	 android:layout_height="match_parent"
           	 android:layout_centerInParent="true"
           	 android:gravity="center"
            >
             <TextView 
             android:id="@+id/coupon_used_tv"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:gravity="center"
             android:text="已用"
             android:textSize="16sp"
             android:textColor="@color/common_gray"
             />
           <TextView 
             android:id="@+id/coupon_used_tv_size"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:layout_toRightOf="@id/coupon_usable_tv"
             android:visibility="gone"
             android:layout_marginLeft="2dp"
             android:gravity="center_vertical"
             android:textSize="14sp"
             android:textColor="@color/common_gray"
             />  
                
            </LinearLayout>
            <View 
             android:id="@+id/coupon_used_v"
             android:visibility="gone"
             android:layout_height="2dp"
           	 android:layout_width="60dp"
             android:background="@color/common_orange"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true" />
        </RelativeLayout>
         <RelativeLayout 
            android:id="@+id/coupon_deprecate_rl"
            android:layout_weight="1"
           	 android:layout_height="match_parent"
           	 android:layout_width="0dp"
            >
           <LinearLayout 
            android:layout_width="wrap_content"
           	 android:layout_height="match_parent"
           	 android:layout_centerInParent="true"
           	 android:gravity="center"
            >
             <TextView 
             android:id="@+id/coupon_deprecate_tv"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:gravity="center"
             android:text="已过期"
             android:textSize="16sp"
             android:textColor="@color/common_gray"
             />
           <TextView 
             android:id="@+id/coupon_deprecate_tv_size"
           	 android:layout_height="wrap_content"
           	 android:layout_width="wrap_content"
           	 android:layout_toRightOf="@id/coupon_usable_tv"
             android:layout_marginLeft="2dp"
             android:gravity="center_vertical"
             android:textSize="14sp"
             android:visibility="gone"
             android:textColor="@color/common_gray"
             />  
                
            </LinearLayout>
            <View 
             android:id="@+id/coupon_deprecate_v"
             android:layout_height="2dp"
           	 android:layout_width="60dp"
           	 android:visibility="gone"
             android:background="@color/common_orange"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true" />
        </RelativeLayout>
       </LinearLayout> 
    
      <LinearLayout
        android:id="@+id/coupon_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical" >
      </LinearLayout>
    

</LinearLayout>
