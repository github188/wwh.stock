<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/custom_common_dialog_top"
        >
        <TextView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/common_black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:text="结束充电 "
        android:gravity="center"
        /> 
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#dcdcdc" 
            />
      <TextView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/common_black"
        android:textSize="13sp"
        android:text="结束充电后，请及时放回充电枪"
        android:layout_margin="15dp"
        android:gravity="center"
        /> 
    </LinearLayout>
    <LinearLayout 
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/custom_common_dialog_bottom"
        >
        <TextView 
        android:id="@+id/dialog_finish_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="@color/common_light_black"
        android:textSize="15sp"
        android:layout_marginRight="1dp"
        android:text="暂时不 "
        android:padding="15dp"
        android:gravity="center"
        /> 
          <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#EEEEEE"   
            />
      <TextView 
      android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textColor="@color/common_orange"
        android:textSize="15sp"
        android:text="结束"
        android:padding="15dp"
        android:id="@+id/dialog_finish_commit"
        android:gravity="center"
        /> 
    </LinearLayout>

</LinearLayout>
