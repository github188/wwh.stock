<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
         <item name="android:windowNoTitle">true</item>
    	 <item name="android:windowBackground">@color/common_white</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
<!-- 详情、筛选下弹出框样式 -->
    <style name="AnimBottom" parent="@android:style/Animation">  
    <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>  
    <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>  
</style>  
    <style name="AnimBottom2" parent="@android:style/Animation">  
    <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>  
</style> 
 <!-- 登录 弹出 效果 activity -->
<style name="AnimActivityTheme" parent="@android:style/Theme.Light.NoTitleBar">
    <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
</style>

<style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/login_bottom_in</item>
    <item name="android:activityCloseExitAnimation">@anim/login_bottom_out</item>
    
</style>

<!--  左弹出 效果 activity -->
<style name="AnimActivityThemelfte" parent="@android:style/Theme.NoTitleBar">
    <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimThemeleft</item>
</style>
<style name="FeelyouWindowAnimThemeleft" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/activity_left_in</item>
    <item name="android:activityCloseExitAnimation">@anim/login_bottom_out</item>
    
</style>

<!--  左弹出 效果 activity -->
<style name="AnimActivityThemeDynamiclfte" parent="@android:style/Theme.NoTitleBar">
    <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimThemeDynamicleft</item>
</style>
<style name="FeelyouWindowAnimThemeDynamicleft" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/activity_left_in</item>    
</style>

  <!--  <item name="android:activityOpenEnterAnimation">@anim/in_from_left</item>
    <item name="android:activityOpenExitAnimation">@anim/out_from_right</item>
    <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
    <item name="android:activityCloseExitAnimation">@anim/out_from_left</item> -->
   
  <style name="pulltofreshProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/pulltofresh_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ImageloadingDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item><!--对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
        <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
    </style>
    <style name="Theme_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
      <!-- 充电完成支付密码对话框主体 -->
   <style name="ChargePayDialog" parent="android:style/Theme.Dialog">  
         <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
         <item name="android:windowBackground">@drawable/common_shape_dialog</item>
    </style> 
        <!--eichong4.0 custom dialog -->
   <style name="customCommonDialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
       <item name="android:background">@android:color/transparent</item>  
        <!-- 背景透明 -->  
        <item name="android:windowBackground">@android:color/transparent</item> 
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style> 
   <declare-styleable name="ScanInputEditText">
        <attr name="pivBorderColor" format="color"/>
        <attr name="pivBorderWidth" format="dimension"/>
        <attr name="pivBorderRadius" format="dimension"/>
        <attr name="pivPasswordColor" format="color"/>
        <attr name="pivPasswordWidth" format="dimension"/>
        <attr name="pivPasswordRadius" format="dimension"/>
        <attr name="pivPasswordLength" format="integer"/>
    </declare-styleable>
   <!-- 开发票页面checkbox样式 -->  
   <style name="InvoiceCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">    
    <item name="android:button">@drawable/invoice_check</item>    
    <item name="android:paddingLeft">10dip</item>  
</style>
   
</resources>
