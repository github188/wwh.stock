#set($searchColCount = 2)
<!DOCTYPE html>
<html>
<head>
    <title>$!{table.name}管理</title>
    <meta charset="UTF-8">
    \#parse("commons/commonJs.vm")
    \#parse("commons/commonCss.vm")
    <script type="text/javascript">
        $(function () {
            jQuery('#dg').datagrid({
                url: '$!{table.urlName}/queryPaged',
                columns: [[
                    {field: 'id', checkbox: true, hidden:true}
#foreach ($column in $table.columns)#if ("orderBy"!=$!{column.fieldName})
#if($velocityCount<=$searchColCount+1)
                   ,{field: '$!{column.fieldName}', title: '$!{column.columnCommnet}', width: 100,align:'center'}
#else
                   ,{field: '$!{column.fieldName}', title: '$!{column.columnCommnet}', width: 100,align:'right',sortable:true,formatter:optionNumFun}
#end
#end#end
                ]],
                pagination: true,
                pageSize:Magic.PAGE_SIZE,
                pageList:Magic.PAGE_LIST,
                rownumbers:true,
                singleSelect: false,
                remoteSort:false,
                fitColumns: true,
                fit: true,
                toolbar: '#toolbar',
                onDblClickRow: function (rowid, rowdata) {
                    editForm();
                }
            });
        });
        function optionFun(value, row, index) {
            if (!!value) {
                return Highcharts.numberFormat(value, 2);
            } else {
                return '';
            }
        }
        function newForm() {
            Magic.openWin('新增$!{table.name}', '$!{table.urlName}/add', 600, 200);
        }
        function editForm() {
            var row = jQuery('#dg').datagrid('getSelected');
            if (row) {
                Magic.openWin('编辑$!{table.name}', '$!{table.urlName}/edit/' + row.id, 600, 300);
            }
        }
        function destroyForm() {
            var rows = jQuery('#dg').datagrid('getSelections');
            if (rows.length > 0) {
                jQuery.messager.confirm('确认删除', '确定删除该记录?', function (r) {
                    if (r) {
                        var ids = [];
                        jQuery.each(rows, function (index, row) {
                            ids.push(row.id);
                        });
                        jQuery.post('$!{table.urlName}/delete', {'ids': ids.toString()}, function (result) {
                            if (result.success) {
                                jQuery('#dg').datagrid('reload');    // reload the user data
                            } else {
                                jQuery.messager.show({    // show error message
                                    title: '错误',
                                    msg: result.message
                                });
                            }
                        });
                    }
                });
            }
        }

        function dataRefresh() {
            $.dream.tip("加载中...");
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
            var $!{column.fieldName}=jQuery('#filter_$!{column.fieldName}').val();
#end
#end
            jQuery.post('$!{table.urlName}/dataRefresh',{#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
'$!{column.fieldName}':$!{column.fieldName}#if($velocityCount<$searchColCount),#end
#end#end},function(result){
                if(!result.success){
                    $.dream.closetip();
                    jQuery.messager.show({title: '错误', msg: result.message });

                } else {
                    jQuery('#dg').datagrid('load', {#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
'$!{column.fieldName}':$!{column.fieldName}#if($velocityCount<$searchColCount),#end
#end#end});
                    $.dream.closetip();
                }
            });
        }

        function contentSearch() {
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
            var $!{column.fieldName}=jQuery('#filter_$!{column.fieldName}').val();
#end
#end
            jQuery('#dg').datagrid('load', {
                #foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
'$!{column.fieldName}':$!{column.fieldName}#if($velocityCount<$searchColCount),#end
#end
#end
})
        }

    </script>
</head>
<body class="easyui-layout" style="overflow-y: hidden" scroll="no">
<table id="dg" data-options="toolbar:'#toolbar'"></table>
<div id="toolbar">
    <div class="search_box">
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
        $!{column.columnCommnet}：<input id="filter_$!{column.fieldName}" class="easyui-validatebox">
#end
#end
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" plain="true"
           onclick="contentSearch()">搜索</a>
    </div>
    <div class="btn_box">
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true"
           onclick="newForm()">新增</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true"
           onclick="editForm()">编辑</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true"
           onclick="destroyForm()">删除</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-mini-refresh" plain="true"
           onclick="dataRefresh()">重新生成</a>
    </div>
</div>
</body>
</html>
