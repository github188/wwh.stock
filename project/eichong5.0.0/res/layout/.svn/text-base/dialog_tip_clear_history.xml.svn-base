<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white" >
    
    <TextView 
         android:id="@+id/dialog_comment_title"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
    	 android:layout_marginTop="10dp"
         android:text="提示"
         android:textColor="@color/common_black"
         android:textSize="18sp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:textStyle="bold"
         android:gravity="center"
        />
     <TextView 
         android:id="@+id/dialog_comment_content"
         android:layout_below="@id/dialog_comment_title"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:textColor="@color/common_black"
         android:textSize="20sp"
         android:paddingLeft="15dp"
         android:paddingRight="15dp"
         android:gravity="center"
        />
     <LinearLayout 
          android:id="@+id/dialog_cancle_bespoke_cancel_ll"
         android:layout_below="@id/dialog_comment_content"
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
    	 android:layout_marginBottom="10dp"
    	 android:background="@color/common_light_gray"
    	 android:paddingTop="1dp"
         android:orientation="horizontal"
         >
      <TextView 
         android:id="@+id/dialog_cancle_bespoke_cancel"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
         android:text="取消"
         android:background="@color/common_white"
         android:textColor="@color/blue"
         android:textSize="20sp"
         android:layout_marginRight="1dp"
         android:gravity="center"
        />
    <TextView 
         android:id="@+id/dialog_cancle_bespoke_confirm"
         android:layout_width="0dp"
    	 android:layout_height="wrap_content"
    	 android:layout_weight="1"
         android:text="确定"
         android:background="@color/common_white"
         android:textColor="@color/blue"
         android:textSize="20sp"
         android:gravity="center"
        />   
         
         
     </LinearLayout>
    
   

</RelativeLayout>
