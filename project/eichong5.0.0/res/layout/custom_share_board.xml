<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custome_share_main_view"
    android:background="@color/common_white" >

    <TextView
        android:id="@+id/share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="16dp"
        android:text="分享"
        android:textSize="17sp" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/share_text"
        android:background="@color/common_light_gray" />

    <LinearLayout
        android:id="@+id/share_ll_line1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/divider_line"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layoutAnimation="@anim/share_layout_animation" >
 <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/wechat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                 android:layout_centerHorizontal="true"
                android:background="@drawable/umeng_socialize_wechat" />
            <TextView 
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/wechat"
                android:text="微信"
                android:textSize="13sp"
                android:textColor="@color/common_black"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/wechat_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_wxcircle"
                android:layout_centerHorizontal="true" />
             <TextView 
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/wechat_circle"
                android:text="朋友圈"
                android:textSize="13sp"
                android:textColor="@color/common_black"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_qq_on"
               android:layout_centerHorizontal="true"/>
             <TextView 
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/qq"
                android:text="QQ"
                android:textSize="13sp"
                android:textColor="@color/common_black"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                
                />
        </RelativeLayout>

      
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/share_ll_line1"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layoutAnimation="@anim/share_layout_animation" >

       <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/qzone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_qzone_on"
                 android:layout_centerHorizontal="true" />
             <TextView 
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/qzone"
                android:text="QQ空间"
                android:textSize="13sp"
                android:textColor="@color/common_black"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/sina"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/umeng_socialize_sina_on"
                 android:layout_centerHorizontal="true"/>
             <TextView 
                 android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/sina"
                android:text="微博"
                android:textSize="13sp"
                android:textColor="@color/common_black"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

        </RelativeLayout>

    </LinearLayout>
    

</RelativeLayout>