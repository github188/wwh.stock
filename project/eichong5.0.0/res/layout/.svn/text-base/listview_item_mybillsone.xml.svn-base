	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="14sp"
	    android:text="充值"
	    android:textColor="@color/common_light_black"
	    />
        <TextView 
        android:id="@+id/recharge_money"
