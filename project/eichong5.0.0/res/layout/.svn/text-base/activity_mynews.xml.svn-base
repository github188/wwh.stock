<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_white"
    android:orientation="vertical" >
    <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/mynews_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="消息"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
   <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/common_white"
         android:orientation="vertical"
       >
       <RelativeLayout 
           android:id="@+id/mynews_system"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="15dp"
           >
           <ImageView 
               android:id="@+id/mynews_system_icon"
               android:layout_width="40dp"
           	   android:layout_height="40dp" 
               android:src="@drawable/img_news_system"
               android:scaleType="centerInside"
               android:layout_centerVertical="true"
               />
            <TextView 
             android:id="@+id/mynews_system_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="系统公告"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:textStyle="bold"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/mynews_system_icon"
            />
           <View
            android:id="@+id/mynews_system_red"
            android:layout_toRightOf="@id/mynews_system_title"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:background="@drawable/common_circle_little_red" />
            <TextView 
             android:id="@+id/mynews_system_content"
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_light_black"
             android:textSize="13sp"
             android:singleLine="true"
             android:ellipsize="end"
             android:layout_marginLeft="10dp"
             android:layout_below="@id/mynews_system_title"
             android:layout_toRightOf="@id/mynews_system_icon"
            />
             <TextView 
             android:id="@+id/mynews_system_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="14sp"
             android:layout_alignParentRight="true"
            />
       </RelativeLayout>
       <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="65dp"
            android:background="@color/common_light_grey"
           />
       <RelativeLayout 
           android:id="@+id/mynews_msg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="15dp"
           >
          <ImageView 
               android:id="@+id/mynews_msg_icon"
               android:layout_width="40dp"
           	   android:layout_height="40dp" 
               android:src="@drawable/img_news_msg"
               android:scaleType="centerInside"
               android:layout_centerVertical="true"
               />
            <TextView 
             android:id="@+id/mynews_msg_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的消息"
             android:textColor="@color/common_black"
             android:textSize="18sp"
             android:textStyle="bold"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/mynews_msg_icon"
            />
           <View
            android:id="@+id/mynews_msg_red"
            android:layout_toRightOf="@id/mynews_msg_title"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
             android:visibility="gone"
            android:background="@drawable/common_circle_little_red" />
            <TextView 
             android:id="@+id/mynews_msg_content"
             android:layout_width="180dp"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_light_black"
             android:textSize="13sp"
              android:singleLine="true"
             android:ellipsize="end"
             android:layout_marginLeft="10dp"
             android:layout_below="@id/mynews_msg_title"
             android:layout_toRightOf="@id/mynews_msg_icon"
            />
             <TextView 
             android:id="@+id/mynews_msg_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_light_black"
             android:textSize="14sp"
             android:layout_alignParentRight="true"
            />
       </RelativeLayout>
       
   </LinearLayout>

</LinearLayout>
