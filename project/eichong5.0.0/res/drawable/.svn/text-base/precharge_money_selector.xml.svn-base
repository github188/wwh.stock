<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/common_light_yellow" />

            <stroke android:width="1dp" android:color="@color/common_light_orange" />
        </shape></item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <solid android:color="@color/common_light_grey" />

            <stroke android:width="1dp" android:color="@color/common_light_gray" />

        </shape>
     </item>

</selector>