<?xml version="1.0" encoding="utf-8"?>
<!-- 个人资料界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/common_orange" >

        <ImageButton
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="每日领取"
            android:textColor="@color/common_white"
            android:textSize="18sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/datatime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="2017-02-25"
            android:textColor="@color/common_black"
            android:textSize="14sp" />.
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="今日领取积分"
            android:textColor="@color/common_black"
            android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/img_bg" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal"
            android:padding="25dp"
            android:textStyle="bold"
            android:textColor="@color/common_red"
            android:background="@drawable/img_round_size"
            android:textSize="50sp" />
        <TextView
            android:id="@+id/receive"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:text="点击领取"
            android:textColor="@color/common_white"
            android:background="@null"
            android:textSize="14sp" />
        <View 
            android:id="@+id/v"
            android:layout_width="57dp"
            android:layout_height="1dp"
            android:background="@color/common_white"
            android:layout_below="@id/receive"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    
	<com.bm.wanma.view.CustomGridView
                android:id="@+id/custom_function"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_white"
                android:numColumns="5"
                android:columnWidth="10dp"  
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
				  android:horizontalSpacing="10dp"  
				  android:verticalSpacing="10dp"  
				  android:listSelector="@android:color/transparent"
				  android:gravity="center" 
	/>

    <TextView
        android:id="@+id/biaoshi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="· 充值金额仅能用于本app使用 \n· 积分与充值金额有关，实计积分与充值成功有关"
        android:textColor="@color/common_light_light_black"
        android:textSize="12sp" />

</LinearLayout>