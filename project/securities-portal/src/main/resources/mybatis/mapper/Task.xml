	<select id="Task_select_all" resultType="map">
	    select 
     		<include refid="Task_Base_Column_List" />,
     		p.name as yz, sd.content as statusName
     	from 
     		task_content tk
     		left join member_auth_space p on p.user_id = tk.uid
     		left join sys_dict sd on sd.value = ifnull(tk.task_status, '1') and sd.key_name='task_status'
     	where 
     		tk.task_status not in(1, 10)
     	<if test="status!=null and status!=''">
     	    and tk.task_status = #{status}
     	</if>
     	<if test="indusPid!=null and indusPid!=''">
     	    and tk.indus_pid = #{indusPid}
     	</if>
     	<if test="indusId!=null and indusId!= ''">
			and tk.indus_id=#{indusId}
     	</if>
     	<if test="minCash!=null and minCash!=''">
     	    and tk.task_cash >= #{minCash}
     	</if>
     	<if test="maxCash!=null and maxCash!=''">
		<![CDATA[
     	    and tk.task_cash < #{maxCash}
		]]>
     	</if>
     	<if test="orderBy!=null and orderBy!=''">
     	    ORDER BY 
     			tk.${orderByStr} ${ascStr}
     	</if>
     	limit ${limit},  ${size}
	</select>
	
	<select id="Task_select_nums" resultType="int">
	    select count(id) from task_content 
	    where 
     		task_status not in(1, 10)
     	<if test="status!=null and status!=''">
     	    and task_status = #{status}
     	</if>
     	<if test="indusPid!=null and indusPid!=''">
     	    and indus_pid = #{indusPid}
     	</if>
     	<if test="indusId!=null and indusId!= ''">
			and indus_id = #{indusId}     	    
     	</if>
     	<if test="minCash!=null and minCash!=''">
     	    and task_cash >= #{minCash}
     	</if>
     	<if test="maxCash!=null and maxCash!=''">
		<![CDATA[
     	    and task_cash < #{maxCash}
		]]>
     	</if>
	</select>
	
	<select id="Task_get" resultMap="get-Task-result">
	    select <include refid="Task_Base_Column_List" /> FROM task_content tk where tk.id=#{0}
	</select>
	
	<select id="MyTask_select_all" resultType="map">
	    select 
	    	tk.id,
	    	tk.task_title, 
     		tk.task_cash, 
     		tk.cash_cost,
     		tk.create_date,
     		tk.task_status,
			tk.view_num,
			tk.work_num,
			tk.task_desc,
			tk.indus_pid,
     		(select count(mk.id) from task_mark mk where mk.obj_id = tk.id)  as marknums, 
     		(select count(tc.id) from task_contract tc where tc.tk_id = tk.id and ifnull(tc.py_status, 0)=0) as payNum,
     		bd.id as bid
     	from 
     		task_content tk 
     		left join task_bid bd on bd.task_id=tk.id and bd.bid_status=4
     	<where>
     	    <if test="uid!=null and uid!=''">
     	        and tk.uid = #{uid}
     	    </if>
     	    <if test="id!=null and id!=''">
     	        and tk.id=#{id}
     	    </if>
     	    <if test="title!=null and title!=''">
     	        and tk.task_title like '%${title}%'
     	    </if>
     	    <if test="status!=null and status!=''">
     	        and tk.task_status=#{status}
     	    </if>
     	</where>
     	ORDER BY 
     		create_date DESC
     	limit ${limit}, ${size}
	</select>
	
