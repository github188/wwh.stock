<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
     <TextView 
        android:id="@+id/listview_mybespoke_status"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:textSize="15sp"
	    android:gravity="center_vertical"
	    android:textColor="@color/common_light_black"
	    />
     <View 
          android:id="@+id/listview_mybespoke_line"
          android:layout_width="match_parent"
	      android:layout_height="1dp"
          android:background="@color/common_light_white"
          android:layout_below="@id/listview_mybespoke_status"
         />
</RelativeLayout>
