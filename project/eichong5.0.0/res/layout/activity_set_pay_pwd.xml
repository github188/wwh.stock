<?xml version="1.0" encoding="utf-8"?>
<!--设置支付密码界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView 
            android:id="@+id/modify_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="关闭"
            android:textColor="@color/common_gray"
            android:layout_alignParentLeft="true"
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
             android:text="设置支付密码"
            android:textColor="@color/common_orange"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/modify_et_current_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="设置支付密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/modify_et_confirm_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/common_edit_shape_selector"
        android:hint="确认支付密码"
         android:textColor="@color/common_black"
        android:textColorHint="@color/common_light_gray"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textSize="18sp" />

    <Button
        android:id="@+id/modify_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/popup_select_shape_confirm"
        android:padding="12dp"
        android:text="确定"
        android:textColor="@color/common_white"
        android:textSize="18sp" />

  
</LinearLayout>