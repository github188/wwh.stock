	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_taitou"
