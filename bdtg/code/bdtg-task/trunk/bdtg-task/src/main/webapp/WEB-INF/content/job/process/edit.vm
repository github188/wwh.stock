<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>审核编辑</title>
    #parse("commons/commonJs.vm")
    #parse("commons/commonCss.vm")
    <script type="text/javascript">
        function save() {
            jQuery('#fm').form('submit', {
                url: '${base}/job/process/save',
                onSubmit: function () {
                    return jQuery(this).form('validate');
                },
                success: function (result) {
                    result = jQuery.parseJSON(result);
                    Magic.closeWin();
                    if (!result.success) {
                        window.parent.jQuery.messager.show({title: '错误', msg: result.message});
                    } else {
                        window.parent.jQuery('#dg').datagrid('reload');
                    }
                }
            });
        }
    </script>
</head>
<body class="easyui-layout" data-options="fit:true">
<div data-options="region:'center',border:false"
     style="padding: 10px 60px 20px 60px;background:#fff;border:1px solid #ccc;">
    <form id="fm" method="post">
        <input type="hidden" name="id" value="$!{model.id}">
			<table width="100%" cellpadding="5">
	        <tr>
				<td align="left">
					类型
				</td>
				<td>
		            <input type="hidden" name="tid" value="$!model.tid"/>
					<select class="easyui-combobox" editable="false" name="type" style="width:200px;height:30px;">
						#foreach($!option in $!types)
						<option value="$!option.value" #if($!option.value == $!model.type) selected #end>$!option.content</option>
						#end
		            </select>
			    </td>
			</tr>
			<tr>
	            <td align="left">
					进度描述
	            </td>
	            <td>
	            	<input class="easyui-textbox" name="content" value="$!model.content" data-options="multiline:true" style="width:200px;height:100px"></input>
	            </td>
	        </tr>
	        <tr>
				<td align="left">
				   	 时点设置
				</td>
				<td>
					<input name="statusTime" editable="false" class="easyui-datebox" value="$!date.format('yyyy-MM-dd', $!model.statusTime)" style="width:200px;height:26px">
	    		</td>
			</tr>
		</table>
    </form>
</div>
<div region="south" border="false" style="text-align: right; height: 30px;padding-top:3px;padding-right:10px">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="Magic.closeWin()">取消</a>
</div>
</body>
</html>