<?xml version="1.0" encoding="utf-8"?>
<!-- 系统消息详情界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_white"
    android:orientation="vertical" >
    <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/mynews_system_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="系统消息"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
   
     <TextView 
         	 android:id="@+id/mynews_system_detail_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_black"
             android:textSize="18sp"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
            />
    <View 
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/common_light_gray"
         android:layout_margin="10dp"
        />
     <TextView 
         	 android:id="@+id/mynews_system_detail_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_black"
             android:textSize="13sp"
             android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
            />
     <TextView 
         	 android:id="@+id/mynews_system_detail_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/common_light_black"
             android:textSize="15sp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
            />

</LinearLayout>
