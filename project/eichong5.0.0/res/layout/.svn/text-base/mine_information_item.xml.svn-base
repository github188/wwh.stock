<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_light_grey"
     >
    <TextView 
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:padding="10dp"
        android:textColor="#999999"
        android:text="今天"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/common_item_padding_20"
	    android:layout_marginRight="@dimen/common_item_padding_20"
	    android:orientation="vertical"
	    android:background="@drawable/common_bg_information"
	    >

	    <TextView
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="16dp"
	        android:padding="@dimen/common_item_padding_10"
	        android:textColor="@color/common_black"
	         />
	    <TextView
	        android:id="@+id/tv_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dp"
	        android:maxLines="2"
	        android:ellipsize="end"
	        android:paddingLeft="@dimen/common_item_padding_10"
	        android:paddingRight="@dimen/common_item_padding_10"
	        android:paddingBottom="@dimen/common_item_padding_10"
	        android:textColor="#888888"
	         />
	    <View android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/common_light_white"
	        />
	      <TextView
	        android:id="@+id/tv_dynamic"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/common_item_padding_10"
	        android:textSize="16dp"
	        android:drawableRight="@drawable/btn_arrow_right"
	        android:textColor="@color/common_light_black"
	        />
	</LinearLayout>
</LinearLayout>
