<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
		   android:textColor="@color/common_black"
		   android:textSize="15sp"
		   android:padding="10dp"
		   android:text="邮费支付方式："/>
    	<RelativeLayout 
    	     android:id="@+id/invoice_pay_weixin_rl"
    	     android:layout_width="match_parent"
	         android:layout_height="wrap_content"
		     android:background="@color/common_white"
		     android:padding="10dp"
    	    >
    	    <ImageView 
    	        android:id="@+id/invoice_pay_weix_logo"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/img_weixin"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	        	android:layout_toRightOf="@id/invoice_pay_weix_logo"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"
		     		android:layout_marginLeft="10dp"
		     		android:layout_centerVertical="true"
		     		android:text="微信支付"/>
    	    <ImageView 
    	        android:id="@+id/invoice_pay_weix_select"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/btn_invoice_pay_selected"
    	        android:layout_alignParentRight="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	            android:id="@+id/invoice_pay_weix_money"
    	        	android:layout_toLeftOf="@id/invoice_pay_weix_select"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_orange"
		     		android:textSize="15sp"
		     		android:layout_marginRight="10dp"
		     		android:layout_centerVertical="true"/>
    	</RelativeLayout>
    		<RelativeLayout 
    	     android:id="@+id/invoice_pay_alipay_rl"
    	     android:layout_width="match_parent"
	         android:layout_height="wrap_content"
		     android:background="@color/common_white"
		     android:padding="10dp"
		     android:layout_marginTop="1dp"
    	    >
    	    <ImageView 
    	        android:id="@+id/invoice_pay_alipay_logo"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/img_zhifubao"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	        	android:layout_toRightOf="@id/invoice_pay_alipay_logo"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"
		     		android:layout_marginLeft="10dp"
		     		android:layout_centerVertical="true"
		     		android:text="支付宝"/>
    	    <ImageView 
    	        android:id="@+id/invoice_pay_alipay_select"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/btn_invoice_pay_select"
    	        android:layout_alignParentRight="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	            android:id="@+id/invoice_pay_alipay_money"
    	        	android:layout_toLeftOf="@id/invoice_pay_alipay_select"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_orange"
		     		android:textSize="15sp"
		     		android:layout_marginRight="10dp"
		     		android:layout_centerVertical="true"/>
    	</RelativeLayout>	
    			<RelativeLayout 
    	     android:id="@+id/invoice_pay_daofu_rl"
    	     android:layout_width="match_parent"
	         android:layout_height="wrap_content"
		     android:background="@color/common_white"
		     android:padding="10dp"
		     android:layout_marginTop="1dp"
    	    >
    	    <ImageView 
    	        android:id="@+id/invoice_pay_daofu_logo"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/img_daofu"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	        	android:layout_toRightOf="@id/invoice_pay_daofu_logo"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"
		     		android:layout_marginLeft="10dp"
		     		android:layout_centerVertical="true"
		     		android:text="快递货到付款"/>
    	    <ImageView 
    	        android:id="@+id/invoice_pay_daofu_select"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:src="@drawable/btn_invoice_pay_select"
    	        android:layout_alignParentRight="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	            android:id="@+id/invoice_pay_daofu_money"
    	        	android:layout_toLeftOf="@id/invoice_pay_daofu_select"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_orange"
		     		android:textSize="15sp"
		     		android:layout_marginRight="10dp"
		     		android:layout_centerVertical="true"
		     		android:text="货到付款"/>
    	</RelativeLayout>		
    			<TextView 
    			    android:id="@+id/invoice_commit"
    			    android:layout_width="match_parent"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_white"
		     		android:textSize="15sp"
		     		android:text="提交"
		     		android:gravity="center"
		     		android:padding="10dp"
    			    android:layout_marginTop="10dp"
    			    android:layout_marginLeft="20dp"
    			    android:layout_marginRight="20dp"
    			    android:layout_marginBottom="40dp"
    			    android:background="@drawable/common_shape_corner_orange"
    			    />

</LinearLayout>
