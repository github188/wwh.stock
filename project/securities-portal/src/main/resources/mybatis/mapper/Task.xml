	<select id="Task_bid_select" resultType="map">
	    select 
	    	tk.id, tk.task_title, indus.indus_name 
	    from 
	    	task_content tk, task_bid tb, config_industry indus
		where 
			tk.id = tb.task_id and tb.bid_status=4 and indus.id=tk.indus_pid
			and tk.task_status not in (1, 10)
		order by 
			tb.create_date desc
		limit 0, ${size}
	</select>
	
