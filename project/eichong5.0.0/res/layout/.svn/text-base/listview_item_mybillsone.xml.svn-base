<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical"
    >
    <LinearLayout 
        android:id="@+id/listview_mybill_title"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:background="@color/common_light_white"
    	android:gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/datatmie"
	    android:layout_width="0dp"
	    android:layout_weight="6.7"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="14sp"
	    android:textColor="@color/common_black"
	    />
        <TextView 
        android:id="@+id/examine_detail"
	    android:layout_width="0dp"
	    android:layout_weight="2.5"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="14sp"
	    android:text="查看明细"
	    android:gravity="right"
	    android:layout_gravity="center_vertical"
	    android:textColor="@color/common_light_black"
	    />

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:paddingLeft="20dp"
    	android:paddingRight="20dp"
    	android:background="@color/common_white"
        >
        <TextView 
	    android:layout_width="0dp"
	    android:layout_weight="0.2"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="14sp"
	    android:text="电费"
	    android:textColor="@color/common_light_black"
	    />
        <TextView 
        android:id="@+id/electric_charge"
	    android:layout_width="0dp"
	    android:layout_weight="0.55"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="14sp"
	    android:textColor="@color/common_black"
	    android:gravity="left"
	    android:layout_marginLeft="10dp"
	    />
