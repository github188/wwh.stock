<?xml version="1.0" encoding="utf-8"?>
<!-- 我的小助手 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical" >
    <View 
        android:id="@+id/v_f"
    android:layout_width="match_parent"
    android:background="@color/common_orange"
    android:layout_height="25dp"
    />
    <TextView 
         android:layout_width="match_parent"
         android:layout_height="44dp"
         android:background="@color/common_orange"
         android:textColor="@color/common_white"
         android:textSize="18sp"
         android:text="小助手"
         android:gravity="center"
        />
    <RelativeLayout 
         android:id="@+id/fragment_myhelper_share"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="分享电桩"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_link"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_apply"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="申请电桩"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_apply"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>

	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_carpair"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="车辆维修"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_maintenance"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_emergency"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="急救电话"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_call"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_instruction"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="操作说明"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_explain"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<!-- 扫描洗车，扫描开门 -->
	
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_car"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
         android:visibility="gone"
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="扫码洗车"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_car"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	<View 
	    android:visibility="gone"
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	<RelativeLayout 
         android:id="@+id/fragment_myhelper_door"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:paddingLeft="30dp"
         android:paddingRight="20dp"
          android:visibility="gone"
         
        >
        <TextView 
	     android:layout_alignParentLeft="true"
	     android:layout_width="wrap_content"
         android:layout_height="wrap_content"
	     android:textColor="@color/common_gray"
	     android:textSize="18sp"
	     android:text="扫码开门"
	     android:gravity="center_vertical"
	     android:layout_centerVertical="true"	     
	     android:drawableLeft="@drawable/img_help_door"
	     android:drawablePadding="20dp"
	    />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"	
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_map_arrow"
            />
    </RelativeLayout>
	<View 
	    android:visibility="gone"
	    android:layout_width="match_parent"
        android:layout_height="1dp" 
	    android:background="@color/common_light_gray"
	    />
	
    
</LinearLayout>
