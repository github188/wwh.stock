<?xml version="1.0" encoding="utf-8"?>
<!-- 地区设置界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_white"
    android:orientation="vertical" >
     <RelativeLayout
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/security_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="地区"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        </RelativeLayout>
       <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="定位到的位置"
             android:textColor="@color/common_light_black"
             android:textSize="15sp"
             android:layout_marginLeft="@dimen/common_item_padding_20"
             android:layout_marginTop="@dimen/common_item_padding_10"
             android:layout_marginBottom="@dimen/common_item_padding_10"
            />
       <TextView 
           android:id="@+id/area_current"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/common_black"
             android:textSize="15sp"
             android:paddingLeft="@dimen/common_item_padding_20"
             android:paddingTop="@dimen/common_item_padding_15"
             android:paddingBottom="@dimen/common_item_padding_15"
             android:background="@color/common_white"
            />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="选择地区"
             android:textColor="@color/common_light_black"
             android:textSize="15sp"
             android:layout_marginLeft="@dimen/common_item_padding_20"
             android:layout_marginTop="@dimen/common_item_padding_10"
             android:layout_marginBottom="@dimen/common_item_padding_10"
            />
         <LinearLayout 
              android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/common_white"
             
             >
              <ListView 
             android:id="@+id/area_listview"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/common_white"
             android:scrollbars="none"
             android:divider="@color/common_light_white"
             android:dividerHeight="1dp"
             android:layout_marginLeft="@dimen/common_item_padding_20"
             ></ListView>
         </LinearLayout>
        

</LinearLayout>
