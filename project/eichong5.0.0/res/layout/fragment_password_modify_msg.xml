<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_white"
    android:orientation="vertical" >
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/modify_pwd_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:hint="短信验证码"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="4"
             android:paddingLeft="@dimen/common_item_padding_20"
            android:paddingRight="@dimen/common_item_padding_20"
            android:paddingTop="@dimen/common_item_padding_15"
            android:paddingBottom="@dimen/common_item_padding_15"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="16sp" />

       <Button
            android:id="@+id/register_btn_captcha"
            android:layout_width="130dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:layout_marginLeft="-145dp"
            android:background="@color/common_orange"
            android:text="获取短信验证码 "
            android:textColor="@color/common_white"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_item_padding_20"
        android:background="@color/common_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/modify_pwd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:hint="新密码"
            android:inputType="numberPassword"
            android:longClickable="false"
            android:maxLength="8"
            android:paddingLeft="@dimen/common_item_padding_20"
            android:paddingRight="@dimen/common_item_padding_20"
            android:paddingTop="@dimen/common_item_padding_15"
            android:paddingBottom="@dimen/common_item_padding_15"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/modify_pwd_new_eyes"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="-50dp"
            android:scaleType="centerInside"
             android:visibility="gone"
            android:src="@drawable/btn_eyes" />
    </LinearLayout>
      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/common_item_padding_20"
        android:background="@color/common_light_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/modify_pwd_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:hint="确认密码"
            android:inputType="numberPassword"
            android:longClickable="false"
            android:maxLength="8"
            android:paddingLeft="@dimen/common_item_padding_20"
            android:paddingRight="@dimen/common_item_padding_20"
            android:paddingTop="@dimen/common_item_padding_15"
            android:paddingBottom="@dimen/common_item_padding_15"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/modify_pwd_confirm_eyes"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="-50dp"
             android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/btn_eyes" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/commit_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_item_padding_20"
        android:background="@drawable/feedback_commit_bg_gray"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/common_white"
        android:textSize="17sp" />

</LinearLayout>