<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_gray"
    android:orientation="vertical"
     >
      <include 
          layout="@layout/common_invoice_head"
       />
 
      <ScrollView 
          android:layout_width="match_parent"
    	  android:layout_height="match_parent"
    	  android:scrollbars="none"
    	  android:focusable="true"
    	  android:focusableInTouchMode="true"
          >
          
           <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        >
		     <TextView 
              android:id="@+id/invoice_record_detail_status"
              android:layout_width="match_parent"
    	  	  android:layout_height="wrap_content"
              android:textColor="@color/common_black"
		      android:textSize="15sp"
		      android:padding="10dp"
		      android:layout_marginTop="10dp"
		      android:layout_marginBottom="10dp"
		      android:background="@color/common_middle_gray"
              />
		      <LinearLayout 
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:background="@color/common_white"
		          android:orientation="horizontal"
		          android:gravity="center_vertical"
		          >
		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="提交时间"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_time"
	                android:layout_width="0dp"
	                android:layout_weight="5"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"/>
		      </LinearLayout>  
            <LinearLayout 
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:background="@color/common_white"
		          android:orientation="horizontal"
		          android:gravity="center_vertical"
		          android:layout_marginTop="1dp"
		          >
		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="发票内容"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_content"
