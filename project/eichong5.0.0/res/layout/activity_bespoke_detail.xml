<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/bespoke_detail_top_rl" 
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/bespoke_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="预约详情"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        
        </RelativeLayout>
    
     <!-- 订单状态 -->
        <RelativeLayout 
         android:layout_below="@id/bespoke_detail_top_rl"
          android:layout_width="match_parent"
       	 android:layout_height="match_parent"
       	 android:layout_margin="20dp"
         >
      <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_status" 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="订单状态:"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
                android:text="已完成"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
        
      <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_order" 
          	android:layout_below="@id/bespoke_detail_ll_status"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="订单编号:"
                />
            <TextView
                android:id="@+id/bespoke_detail_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
      <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_money" 
          	android:layout_below="@id/bespoke_detail_ll_order"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="本次消费:"
                />
            <TextView
                android:id="@+id/bespoke_detail_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
       <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_time" 
          	android:layout_below="@id/bespoke_detail_ll_money"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="预约时间:"
                />
            <TextView
                android:id="@+id/bespoke_detail_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
          <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_addr" 
          	android:layout_below="@id/bespoke_detail_ll_time"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="预约地址:"
                />
            <TextView
                android:id="@+id/bespoke_detail_addr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
    <LinearLayout 
          	android:id="@+id/bespoke_detail_ll_content" 
          	android:layout_below="@id/bespoke_detail_ll_addr"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                android:text="预约内容:"
                />
            <TextView
                android:id="@+id/bespoke_detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" 
                android:textSize="15sp"
	    		android:textColor="@color/common_light_black"
                />
        </LinearLayout>
      
     <TextView 
            android:id="@+id/bespoke_detail_again_bespoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="再次预约"
            android:gravity="center"
       		android:layout_marginTop="30dp"
       		android:layout_below="@id/bespoke_detail_ll_content"
            android:textSize="20sp"
            android:textColor="@color/common_white"
            android:background="@drawable/popup_select_shape_confirm"
            />
	</RelativeLayout>
</RelativeLayout>
