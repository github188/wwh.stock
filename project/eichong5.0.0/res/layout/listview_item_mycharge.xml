<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical" >
     <TextView 
        android:id="@+id/listview_mycharge_status"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:textSize="15sp"
	    android:gravity="center_vertical"
	    android:textColor="@color/common_light_black"
	    />
       <View 
        android:id="@+id/listview_mycharge_status_line"
        android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_below="@id/listview_mycharge_status"
        android:background="@color/common_light_gray"
         />
       
    <TextView 
        android:id="@+id/listview_mycharge_name"
        android:layout_below="@id/listview_mycharge_status_line"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:textSize="18sp"
	    android:gravity="center_vertical"
	    />
        <TextView 
        android:id="@+id/listview_mycharge_time"
        android:layout_below="@id/listview_mycharge_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:gravity="center_vertical"
	    android:textColor="@color/common_light_black"
	    />
    
     <TextView 
        android:id="@+id/listview_mycharge_address"
        android:layout_below="@id/listview_mycharge_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:lineSpacingExtra="8dp"
	    android:textSize="14sp"
	    android:gravity="center_vertical"
	    android:textColor="@color/common_light_black"
	    />
      <View 
        android:id="@+id/listview_mycharge_bottom_line"
        android:layout_below="@id/listview_mycharge_address"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
	    android:layout_height="1dp"
        android:background="@color/common_light_gray"
         />
	
</RelativeLayout>
