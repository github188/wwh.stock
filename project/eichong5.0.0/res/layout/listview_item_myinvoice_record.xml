<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
     <TextView 
        android:id="@+id/listview_money"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="16sp"
	    android:layout_marginBottom="5dp"
	    android:textColor="@color/common_light_black"
	    />
     
    <TextView 
        android:id="@+id/listview_time"
        android:layout_below="@id/listview_money"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="15sp"
	    android:textColor="@color/common_light_black"
	    />
    <ImageView 
        android:id="@+id/listview_arrow"
        android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:src="@drawable/btn_arrow_right"
        android:layout_marginLeft="5dp"
        />
    
        <TextView 
        android:id="@+id/listview_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:layout_toLeftOf="@id/listview_arrow"
	    android:layout_centerVertical="true"
	    />
</RelativeLayout>
