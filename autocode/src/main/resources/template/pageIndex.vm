#set($searchColCount = 1)
<!DOCTYPE html>
<html>
    <head>
        <title>$!{table.name}管理</title>
        <meta charset="UTF-8">
        \#parse("commons/commonJs.vm")
		\#parse("commons/commonCss.vm")
		<script type="text/javascript">
			$(function() {
				jQuery('#dg').datagrid({
					url:'${base}/$!{generatorContext.module}/$!{table.urlName}/queryPaged',
					columns:[[
						{field:'id',checkbox:true}
#foreach ($column in $table.columns)
						,{field:'$!{column.fieldName}',title:'$!{column.columnCommnet}',width:100}
#end
					]],
					pagination:true,
					singleSelect:false,
					fitColumns:true,
					fit: true,
					toolbar:'#toolbar',
					onDblClickRow: function(rowid,rowdata){
						editForm();
					}
				});
			});
			function optionFun(value,row,index) {
				return "";
			}
			function newForm(){
				Man.openWin('新增$!{table.name}','${base}/$!{generatorContext.module}/$!{table.urlName}/add',600,200);
			}
			function editForm(){
				var row = jQuery('#dg').datagrid('getSelected');
				if (row){
					Man.openWin('编辑$!{table.name}','${base}/$!{generatorContext.module}/$!{table.urlName}/edit/'+row.id,600,300);
				}
			}
			function destroyForm(){
				var rows = jQuery('#dg').datagrid('getSelections');
				if (rows.length>0){
					jQuery.messager.confirm('确认删除','确定删除该记录?',function(r){
						if (r){
							var ids = [];
							jQuery.each(rows,function(index,row) {
								ids.push(row.id);
							});
							jQuery.post('${base}/$!{generatorContext.module}/$!{table.urlName}/delete',{'ids':ids.toString()},function(result){
								Man.reloadList(result);
							});
						}
					});
				}
			}
			
			function contentSearch(){ 
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
				var $!{column.fieldName}=jQuery('#filter_$!{column.fieldName}').val();
#end
#end
				jQuery('#dg').datagrid('load',{
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
				'$!{column.fieldName}':$!{column.fieldName}#if($velocityCount<$searchColCount),#end
#end
#end
				})}
			
		</script>
</head>
<body class="easyui-layout" style="overflow-y: hidden" scroll="no">
   <table id="dg" data-options="toolbar:'#toolbar'"></table>
    <div id="toolbar">
    	<div class="search_box">
#foreach ($column in $table.columns)
#if($velocityCount<$searchColCount+1)
			$!{column.columnCommnet}：<input id="filter_$!{column.fieldName}" class="easyui-textbox" >
#end
#end
			<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="contentSearch()">搜索</a>
    	</div>
    	<div class="btn_box">
    		<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newForm()">新增</a>
        	<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editForm()">编辑</a>
        	<a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyForm()">删除</a>
    	</div>
	</div>
</body>
</html>
