<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_white"
     >
      <RelativeLayout 
        android:id="@+id/invoice_head"
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/invoice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_btn_back"
            android:background="@android:color/transparent"/>
         <ImageButton
            android:id="@+id/invoice_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/invoice_back"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_btn_close"
            android:background="@android:color/transparent"/>
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开发票"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"   
             android:layout_centerVertical="true" 
             android:layout_centerInParent="true"
            />
         <TextView 
		        android:id="@+id/invoice_role"
		        android:layout_marginRight="10dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/invoice_role"
		        android:textSize="16sp"
		        android:textColor="@color/common_light_black" 
		        android:layout_centerVertical="true" 
		        android:layout_alignParentRight="true"
		      /> 
        </RelativeLayout>
        
      <RelativeLayout 
           android:id="@+id/invoice_bottom"  
           android:layout_width="match_parent"  
           android:layout_height="wrap_content" 
           android:background="@color/common_white"
           android:layout_alignParentBottom="true"
           android:padding="10dp"  
           android:visibility="gone"
          >
          <CheckBox 
              android:id="@+id/invoice_checkbox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
			  android:text="全选"    
			  android:textColor="@color/common_black"
			  android:textSize="16sp"  
			  style="@style/InvoiceCheckboxTheme"  
              />
          <TextView 
              android:id="@+id/invoice_total"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
			  android:textSize="16sp"     
			  android:layout_marginTop="5dp" 
			  android:layout_marginLeft="10dp"
			  android:textColor="@color/common_black"  
              android:layout_below="@id/invoice_checkbox"
              />
          <TextView 
               android:id="@+id/invoice_next"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
			  android:textSize="16sp"  
			  android:text="下一步"      
			  android:textColor="@color/common_black"  
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:background="@drawable/invoice_shape_corner_next_gray"
              />
          
      </RelativeLayout>
        
      <ViewSwitcher 
           android:id="@+id/viewswitcher"  
           android:layout_width="match_parent"  
           android:layout_height="match_parent" 
           android:layout_below="@id/invoice_head"
           android:layout_above="@id/invoice_bottom"
          >
           <ListView 
		        android:id="@+id/activity_invoice_listview"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:divider="@null"
		        android:listSelector="@null"
		        />
		    <TextView
		        android:layout_marginTop="40dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="暂无可开发票记录"
		        android:textSize="18sp"
		        android:layout_gravity="center_horizontal"
		        android:drawableTop="@drawable/img_no_invoice"
		        android:drawablePadding="20dp"
		        android:textColor="@color/common_light_black"
		        />
	  </ViewSwitcher>
      
</RelativeLayout>
