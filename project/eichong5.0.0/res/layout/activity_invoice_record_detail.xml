		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="收件人"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_recipient"
	                android:layout_width="0dp"
	                android:layout_weight="5"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"/>
		      </LinearLayout>         
		      <LinearLayout 
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:layout_marginTop="1dp"
		          android:background="@color/common_white"
		          android:orientation="horizontal"
		          android:gravity="center_vertical"
		          >
		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="联系电话"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_recipientp"
	                android:layout_width="0dp"
	                android:layout_weight="5"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"/>
		      </LinearLayout> 
		      <LinearLayout 
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:layout_marginTop="1dp"
		          android:background="@color/common_white"
		          android:orientation="horizontal"
		          android:gravity="center_vertical"
		          >
		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="所在地区"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_area"
	                android:layout_width="0dp"
	                android:layout_weight="5"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"/>
		      </LinearLayout>                  
		   <LinearLayout 
		          android:layout_width="match_parent"
		          android:layout_height="wrap_content"
		          android:padding="10dp"
		          android:layout_marginTop="1dp"
		          android:background="@color/common_white"
		          android:orientation="horizontal"
		          android:gravity="center_vertical"
		          >
		          <TextView 
	                android:layout_width="0dp"
	                android:layout_weight="2"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_light_black"
		     		android:textSize="15sp"
		     		android:text="详情地址"/>
		          <TextView 
		            android:id="@+id/invoice_record_detail_recipientaddr"
	                android:layout_width="0dp"
	                android:layout_weight="5"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"/>
		      </LinearLayout>   
		<TextView 
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
		   android:textColor="@color/common_black"
		   android:textSize="15sp"
		   android:padding="10dp"
		   android:text="邮费支付方式："/>
    	<RelativeLayout 
    	     android:layout_width="match_parent"
	         android:layout_height="wrap_content"
		     android:background="@color/common_white"
		     android:padding="10dp"
    	    >
    	    <ImageView 
    	        android:id="@+id/invoice_pay_logo"
    	        android:layout_width="wrap_content"
	         	android:layout_height="wrap_content"
    	        android:layout_alignParentLeft="true"
    	        android:layout_centerVertical="true"
    	        />
    	    <TextView 
    	            android:id="@+id/invoice_pay_name"
    	        	android:layout_toRightOf="@id/invoice_pay_logo"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"
		     		android:layout_marginLeft="10dp"
		     		android:layout_centerVertical="true"/>
    	    <TextView 
    	            android:id="@+id/invoice_pay_money"
	                android:layout_width="wrap_content"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:textSize="15sp"
		     		android:layout_alignParentRight="true"
		     		android:layout_centerVertical="true"/>
    	</RelativeLayout>
		   	<!-- android:background="@color/common_white" -->
		          <TextView 
		            android:id="@+id/invoice_record_detail_purnum"
	                android:layout_width="match_parent"
	         		android:layout_height="wrap_content"
		     		android:textColor="@color/common_black"
		     		android:drawableRight="@drawable/btn_arrow_right"
		     		android:textSize="15sp"
		     		android:padding="10dp"
		     		android:layout_marginTop="1dp"
		     		android:layout_marginBottom="40dp"
		     		/>

     </LinearLayout>   
   </ScrollView>
</LinearLayout>
