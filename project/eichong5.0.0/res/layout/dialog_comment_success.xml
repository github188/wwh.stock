<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:padding="30dp" >
    
    <TextView 
         android:id="@+id/dialog_comment_title"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:text="评价成功!"
         android:textColor="@color/common_orange"
         android:textSize="22sp"
         android:paddingLeft="22dp"
         android:paddingRight="22dp"
         android:textStyle="bold"
         android:gravity="center"
        />
   <TextView 
         android:id="@+id/dialog_comment_content"
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
         android:textColor="@color/common_light_black"
          android:layout_below="@id/dialog_comment_title"
         android:textSize="18sp"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:gravity="center"
         android:visibility="gone"
        />
    <TextView 
        android:id="@+id/dialog_comment_success_confirm"
         android:layout_centerInParent="true"
         android:layout_below="@id/dialog_comment_content"
         android:layout_marginTop="30dp"
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
         android:text="确定"
         android:textColor="@color/common_white"
         android:textSize="17sp"
         android:gravity="center"
         android:paddingLeft="25dp"
         android:paddingRight="25dp"
         android:background="@drawable/dialog_select_shape_confirm"
        />
    
    
    
    
    

</RelativeLayout>
