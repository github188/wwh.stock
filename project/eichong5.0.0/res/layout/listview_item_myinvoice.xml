<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/common_white"
    android:paddingRight="10dp"
    android:paddingLeft="10dp" >
    
    <CheckBox 
        android:id="@+id/invoice_item_check"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:background="@drawable/invoice_check"
        android:button="@null"
        android:layout_gravity="center_vertical"
        android:clickable="false"  
        android:focusable="false"  
        android:focusableInTouchMode="false" 
        />
    
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     >
        <TextView 
        android:id="@+id/listview_mybill_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="16sp"
	    android:layout_marginBottom="5dp"
	    android:textColor="@color/common_light_black"
	    android:layout_marginTop="10dp"
	    />
     
    <TextView 
        android:id="@+id/listview_mybill_time"
        android:layout_below="@id/listview_mybill_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:textSize="15sp"
	    android:layout_marginBottom="10dp"
	    android:textColor="@color/common_light_black"
	    />
        <TextView 
        android:id="@+id/listview_mybill_money"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:textColor="@color/common_green"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    />
        <View 
            android:id="@+id/listview_line"
            android:layout_width="match_parent"
	    	android:layout_height="1dp"
            android:background="@color/common_light_gray"
            android:layout_alignParentBottom="true"
            />
 </RelativeLayout>
  
</LinearLayout>
