     		(select count(mk.id) from task_mark mk where mk.obj_id = tk.id)  as marknums, 
     		bd.id as bid
     	FROM 
     		task_content tk, task_bid bd
     	<where>
     	    tk.id = bd.task_id
     	    <if test="uid!=null and uid!=''">
     	        and bd.uid = #{uid}
     	    </if>
     	    <if test="id!=null and id!=''">
     	        and id=#{id}
