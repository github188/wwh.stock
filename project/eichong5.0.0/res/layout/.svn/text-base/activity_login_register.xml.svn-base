<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical" >

     <RelativeLayout
        android:id="@+id/login_regist_top_bg"
        android:background="@color/common_orange"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >
        <ImageButton
            android:id="@+id/login_register_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/nav_btn_back"/>
        <TextView 
            android:id="@+id/login_register_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="登陆"
             android:textColor="@color/common_white"
             android:textSize="18sp"
             android:padding="5dp"
             android:layout_centerVertical="true"
             android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
     
    <LinearLayout
        android:id="@+id/login_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical" >
    </LinearLayout>
    
</LinearLayout>
