<?xml version="1.0" encoding="utf-8"?>
<!-- 忘记密码界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/common_light_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/common_orange" >

        <ImageButton
            android:id="@+id/forget_close"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/nav_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="忘记密码"
            android:textColor="@color/common_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/common_bg_shape_selector"
        android:orientation="horizontal"
        android:padding="13dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_call" />

        <View
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:background="@null" />

        <EditText
            android:id="@+id/forget_et_userphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="13"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/img_forget_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-20dp"
            android:background="@drawable/btn_shut_down" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/common_white"
        android:orientation="horizontal"
        android:padding="9dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@drawable/img_lock" />

        <View
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:background="@null" />

        <EditText
            android:id="@+id/forget_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="数字密码"
            android:inputType="numberPassword"
            android:maxLength="8"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_eyes"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-35dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_eyes" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_light_white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/common_framelayoutbg_shape_selector" >

        <EditText
            android:id="@+id/forget_et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="8"
            android:padding="14dp"
            android:paddingLeft="9dp"
            android:textColor="@color/common_black"
            android:textColorHint="@color/common_light_gray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/forget_btn_captcha"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:background="@color/common_orange"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="@color/common_white"
            android:textSize="15sp" />
    </FrameLayout>

    <Button
        android:id="@+id/forget_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/popup_select_shape_confirm"
        android:padding="12dp"
        android:text="提交"
        android:textColor="@color/common_white"
        android:textSize="18sp" />

</LinearLayout>